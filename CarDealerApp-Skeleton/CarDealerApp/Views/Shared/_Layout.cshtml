<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="description" content="The description of my page" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Cars Dealer", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" type="button" data-toggle="dropdown">
                            Customers
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("Ascending","All","Customers", new {order = "ascending" }, null)
                            </li>
                            <li>
                                @Html.ActionLink("Descending","All","Customers", new {order = "descending" }, null)
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="dropdown-toggle" type="button" data-toggle="dropdown">
                            Sales
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li> @Html.ActionLink("All", "All", "Sales") </li>
                            <li> @Html.ActionLink("Discounted", "Discounted", "Sales", new { percent = 5 }, null)</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Cars", "All", "Car")</li>
                    <li>@Html.ActionLink("Parts", "All", "Parts")</li>
                    <li class="dropdown">
                        <a href="dropdown-toggle" type="button" data-toggle="dropdown">
                            Suppliers
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li> @Html.ActionLink("Local", "All", "Suppliers", new {type = "local"}, null) </li>
                            <li> @Html.ActionLink("Importers", "All", "Suppliers", new { type = "importers" }, null)</li>
                        </ul>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>@ViewBag.Username</li>
                    <li>
                        @Html.ActionLink("Register", "Register", "User")
                    </li>
                    <li>
                        @Html.ActionLink("Login", "Login", "User")
                    </li>
                    <li>
                        @using (Html.BeginForm("Logout", "User", FormMethod.Post))
                        {
                            <input type="submit" value="Logout" class="btn btn-lg-15 btn-default"/>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr>
        <footer>
            <p>© 2017 - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
