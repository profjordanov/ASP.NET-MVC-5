@model CarDealer.Models.ViewModels.EditSupplierVm
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Supplier</h2>

<form method="post">
    <input type="number" hidden="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label for="name">Name: </label>
        <input type="text" value="@Model.Name" class="form-control" name="name" />
    </div>
    <div class="form-group">
        <label for="isImporter">Is it importer: </label>
        <input id="isImporter" class="form-control" @if (Model.IsImporter) { @: checked="checked"
                                                    } type="checkbox" name="isImporter" />
    </div>
    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-block" />
    </div>
</form>

