@using CarDealer.Models.ViewModels
@model AddSaleconfirmationVm
@{
    ViewBag.Title = "AddConfirmation";
}

<h2>Review Sale</h2>
<form method="post">
    <input type="number" hidden="hidden" value="@Model.CarId" name="carId" />
    <input type="number" hidden="hidden" value="@Model.CustomerId" name="customerId" />
    <input type="number" hidden="hidden" value="@Model.Discount" name="discount" />
    <div class="form-group">
        <label for="customer">Customer: </label>
        <input type="text" value="@Model.CustomerName" class="form-control" id="customer" disabled="disabled" />
    </div>
    <div class="form-group">
        <label for="car">Car: </label>
        <input type="text" value="@Model.CarRepresentation" class="form-control" id="car" disabled="disabled" />
    </div>
    <div class="form-group">
        <label for="discount">Discount: </label>
        <input type="text" value="@Model.Discount%" class="form-control" id="discount" disabled="disabled" />
    </div>
    <div class="form-group">
        <label for="carPrice">Car Price: </label>
        <input type="number" value="@Model.CarPrice" class="form-control" id="carPrice" disabled="disabled" />
    </div>
    <div class="form-group">
        <label for="finalCarPrice">Final Car Price: </label>
        <input type="number" value="@Model.FinalCarPrice" class="form-control" id="finalCarPrice" disabled="disabled" />
    </div>
    <div class="form-group">
        <a href="/sales/" class="btn btn-lg btn-info">Cancel</a>
        <input type="submit" value="Finalize" class="btn btn-lg btn-primary" />
    </div>
</form>
