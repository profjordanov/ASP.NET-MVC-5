@using System.Collections
@using CarDealer.Models.ViewModels;
@using CarDealerApp.Extensions
@model IEnumerable<AllCustomerVm>
@{
    ViewBag.Title = "All";
}

<h2>All</h2>
@Html.Button("Цък", "btn btn-success")
@Html.Image("https://upload.wikimedia.org/wikipedia/en/e/eb/SupermanRoss.png", "Superman")
<br />
@Html.ActionLink("Add Customer", "Add")
<table class="table table-striped">
    <tr>
        <th>@Html.DisplayNameFor(vms => vms.Name)</th>
        <th>@Html.DisplayNameFor(vms => vms.BirthDate)</th>
        <th>@Html.DisplayNameFor(vms => vms.IsYoungDriver)</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(vm => item.Name)
            </td>
            <td>
                @Html.DisplayFor(vm => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(vm => item.IsYoungDriver)
            </td>
        </tr>
    }
</table>

