@using CarDealer.Models.ViewModels
@model EditCustomerVm

<h2>Edit Customer</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(vm => vm.Id)
    <div class="form-group">
        @Html.LabelFor(vm => vm.Name)
        @Html.EditorFor(vm => vm.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(vm => vm.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(vm => vm.BirthDate)
        @Html.EditorFor(vm => vm.BirthDate, new
   {
       htmlAttributes = new { @class = "form-control", type = "date", value = $"{Model.BirthDate.ToString("yy-MM-dd")}" }
   })
        @Html.ValidationMessageFor(vm => vm.BirthDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(vm => vm.IsYoungDriver)
        @Html.EditorFor(vm => vm.IsYoungDriver)
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" />
    </div>
}