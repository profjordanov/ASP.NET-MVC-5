@model IEnumerable<ODataServer.Models.Task>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Description
        </th>
        <th>
            DueDate
        </th>
        <th>
            StartDate
        </th>
        <th>
            Priority
        </th>
        <th>
            Status
        </th>
        <th>
            AssignedTo
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
        <td>
			@item.Description
        </td>
        <td>
			@String.Format("{0:g}", item.DueDate)
        </td>
        <td>
			@String.Format("{0:g}", item.StartDate)
        </td>
        <td>
			@(item.Priority == null ? "None" : item.Priority.Name)
        </td>
        <td>
			@(item.Status == null ? "None" : item.Status.Name)
        </td>
        <td>
			@(item.AssignedTo == null ? "None" : item.AssignedTo.Name)
        </td>
    </tr>
}

</table>


