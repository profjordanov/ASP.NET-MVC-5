@model ODataServer.Models.Task

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Task</legend>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">DueDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.DueDate)</div>

    <div class="display-label">StartDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.StartDate)</div>

    <div class="display-label">Priority</div>
    <div class="display-field">@(Model.Priority == null ? "None" : Model.Priority.Name)</div>

    <div class="display-label">Status</div>
    <div class="display-field">@(Model.Status == null ? "None" : Model.Status.Name)</div>

    <div class="display-label">AssignedTo</div>
    <div class="display-field">@(Model.AssignedTo == null ? "None" : Model.AssignedTo.Name)</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


